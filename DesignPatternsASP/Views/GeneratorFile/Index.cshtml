<div class="row">
    <div class="col-8 offset-2">
        <div class="form-group">
            <select id="optionFile" class="form-control">
                <option value="1">Json</option>
                <option value="2">Pipes</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-success" onclick="generate();">Generate</button>
        </div>
    </div>
</div>

<script>
    const generate = () => {
        let optioFile = document.getElementById('optionFile').value;
        fetch("@Url.Content("~/GeneratorFile/CreateFile")"+"?optionFile="+optioFile)
            .then(resp => resp.json())
            .then(json => {
                alert(json);
            })
    }
</script>